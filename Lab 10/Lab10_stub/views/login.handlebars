<h1>{{title}}</h1> 
<form class="form-group" id="login-form" method="post" action="/login">
      <div class="form-group">
        <label for="emailAddressInput">Username</label>
        <input type="text" id="emailAddressInput" name="emailAddressInput" placeholder="Enter Username..." >
      </div>
      <div class="form-group">
        <label for="passwordInput">Password</label>
        <input type="password" id="passwordInput" name="passwordInput" placeholder="Enter Password..." >
      </div>
      <div class="form-group">
        <button type="submit" class="btn">login</button>
      </div>
</form>
{{#if Error}}
<div class="Error">
  <p>
    {{Error}}
  </p>
</div>
{{/if}}
<a href="/register">Need to register? Click here to sign-up</a>